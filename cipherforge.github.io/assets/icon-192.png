from PIL import Image, ImageDraw, ImageFont

def create_emoji_icon(size):
    img = Image.new('RGBA', (size, size), (44, 62, 80, 255))
    draw = ImageDraw.Draw(img)
    
    # Try to use emoji font (works on systems with emoji font)
    try:
        # On Windows
        font = ImageFont.truetype("seguiemj.ttf", size // 2)
    except:
        try:
            # On Linux/Mac
            font = ImageFont.truetype("Apple Color Emoji.ttf", size // 2)
        except:
            # Fallback to simple circle
            draw.ellipse([10, 10, size-10, size-10], 
                        fill=(52, 152, 219, 255))
            return img
    
    # Draw lock emoji
    draw.text((size//4, size//4), "ðŸ”’", 
              fill=(255, 255, 255, 255), font=font)
    
    return img

create_emoji_icon(192).save("assets/icon-192.png")
create_emoji_icon(512).save("assets/icon-512.png")
